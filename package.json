{
  "name": "Writzsol",
  "version": "0.0.1",
  "private": true,
  "author": {
    "email": "afulton20@gmail.com",
    "name": "Andrew Fulton",
    "url": "https://www.github.com/afulton11"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .json --ext .js",
    "prettier": "prettier --write \"**/*.{html,js,md,yml}\""
  },
  "dependencies": {
    "@chakra-ui/core": "^0.8.0",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "next": "9.5.3",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "eslint": "^7.10.0",
    "eslint-config-get-off-my-lawn": "^5.0.1",
    "globby": "^11.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,js,jsx,ts,tsx,json,md,mdx,mjs,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{gif,jpg}": [
      "imageoptim",
      "git add"
    ],
    "*.jpg": [
      "imageoptim --jpegmini"
    ],
    "*.png": [
      "imageoptim --no-imageoptim --imagealpha",
      "git add"
    ]
  }
}
