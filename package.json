{
  "name": "writzsol",
  "version": "0.0.1",
  "private": true,
  "author": {
    "email": "afulton20@gmail.com",
    "name": "Andrew Fulton",
    "url": "https://www.github.com/afulton11"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .json --ext .js",
    "prettier": "prettier --write \"**/*.{html,js,ts,tsx,jsx,md,yml}\"",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only -P nexus.tsconfig.json pages/api/gql/schema"
  },
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "@apollo/react-ssr": "^4.0.0",
    "@chakra-ui/core": "^0.8.0",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "@nexus/schema": "^0.16.0",
    "@prisma/client": "^2.9.0",
    "apollo-boost": "^0.4.9",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "apollo-link-schema": "^1.2.5",
    "apollo-server-micro": "^2.18.2",
    "class-validator": "^0.12.2",
    "emotion-theming": "^10.0.27",
    "graphql": "^15.3.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-tag": "^2.11.0",
    "graphql-type-json": "^0.3.2",
    "next": "^10.0.0",
    "next-auth": "^3.1.0",
    "nexus-plugin-prisma": "^0.24.0-next.1",
    "nexus-prisma": "^0.16.2",
    "react": "16.13.1",
    "react-apollo": "^3.1.5",
    "react-dom": "16.13.1",
    "react-hook-form": "^6.11.0",
    "react-timeago": "^5.2.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@prisma/cli": "^2.9.0",
    "@types/lodash": "^4.14.162",
    "@types/next-auth": "^3.1.14",
    "@types/node": "^14.11.8",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^16.9.52",
    "@types/styled-components": "^5.1.4",
    "babel-plugin-emotion": "^10.0.33",
    "globby": "^11.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "resolutions": {
    "webpack": "^5.0.0-beta.30"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,js,jsx,ts,tsx,json,md,mdx,mjs,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{gif,jpg}": [
      "imageoptim",
      "git add"
    ],
    "*.jpg": [
      "imageoptim --jpegmini"
    ],
    "*.png": [
      "imageoptim --no-imageoptim --imagealpha",
      "git add"
    ]
  }
}
