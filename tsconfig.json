{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "styles/theme.js",
    "pages/api/gql/nexus-typegen.ts",
    "pages/api/gql/typegen-nexus-plugin-prisma.d.ts"
  ],
  "exclude": [
    "dist",
    ".next",
    "out",
    "prisma",
    "node_modules",
    "next.config.js",
    "node_modules",
    ".prettierrc.js",
    "eslintrc.js"
  ]
}
